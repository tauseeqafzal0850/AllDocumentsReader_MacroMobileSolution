<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:src="@drawable/permission_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permi_firstTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/manage_permission"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />
    <TextView
        android:id="@+id/cancel_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="@+id/permi_firstTv"
        app:layout_constraintTop_toBottomOf="@+id/permi_firstTv"
        app:srcCompat="@drawable/ic_permission_camera" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center_horizontal|center"
        android:lineSpacingExtra="7sp"
        android:text="@string/camera"
        android:textColor="@color/colorBlackDark"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To take pictures and videos"
        android:lineSpacingExtra="-7sp"
        android:padding="@dimen/_1sdp"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/colorGrayText"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewAllfi"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_permission_internal_storage"
        />

    <TextView
        android:id="@+id/textViewAllfi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center_horizontal|center"
        android:lineSpacingExtra="7sp"
        android:text="@string/text_internal_storage"
        android:textColor="@color/colorBlackDark"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAllfi"
        app:layout_constraintStart_toEndOf="@+id/imageViewAllfi"
        app:layout_constraintTop_toTopOf="@+id/imageViewAllfi" />

    <TextView
        android:id="@+id/textViewAllfis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photos/Media/Files"
        android:lineSpacingExtra="-7sp"
        android:padding="@dimen/_1sdp"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/colorGrayText"
        app:layout_constraintStart_toStartOf="@+id/textViewAllfi"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllfi" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewInternal"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="@+id/imageViewAllfi"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAllfi"
        app:srcCompat="@drawable/ic_permission_external"
        />

    <TextView
        android:id="@+id/textViewInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center_horizontal|center"
        android:lineSpacingExtra="7sp"
        android:text="@string/storage_external"
        android:textColor="@color/colorBlackDark"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInternal"
        app:layout_constraintStart_toEndOf="@+id/imageViewInternal"
        app:layout_constraintTop_toTopOf="@+id/imageViewInternal" />

    <TextView
        android:id="@+id/textViewInternalinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photos/Media/Files"
        android:lineSpacingExtra="-7sp"
        android:padding="@dimen/_1sdp"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/colorGrayText"
        app:layout_constraintStart_toStartOf="@+id/textViewInternal"
        app:layout_constraintTop_toBottomOf="@+id/textViewInternal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/permi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:backgroundTint="@color/app_splash_blue"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>